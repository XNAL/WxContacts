/* pages/department/department.wxss */

.container {
	padding: 0;
    background-color: #fff;
}

.dept-container {
	width: 100%;
}

.dept-container .section {
	padding: 20rpx 28rpx;
	box-sizing: border-box;
	border-bottom: 2rpx solid #ddd;
}

.dept-container .section input {
	padding: 0 28rpx;
	widows: 100%;
	height: 72rpx;
	font-size: 36rpx;
	line-height: 72rpx;
	background: #f4f4f8;
	border: 2rpx solid #f4f4f8;
	border-radius: 12rpx;
	box-sizing: border-box;
	text-align: center;
}

.scroll-view-item {
	position: relative;
	margin-left: 28rpx;
	border-bottom: 2rpx solid #eee;
}

.scroll-view-item navigator {
	padding: 30rpx 30rpx 30rpx 0;
}

.scroll-view-item .dept-name {
	font-size: 48rpx;
	color: #333;
}

.scroll-view-item .dept-count {
	float: right;
	color: #999;
	margin-top: 12rpx;
	margin-right: 30rpx;
	font-size: 36rpx;
}

.scroll-view-item .arrow {
	position: absolute;
	top: 50rpx;
	right: 20rpx;
	width: 36rpx;
	height: 36rpx;
}